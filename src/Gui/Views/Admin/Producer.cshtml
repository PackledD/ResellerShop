@using BuisnessLogic.models
@model Producer
@{
    ViewData["Title"] = "Производитель";
}

<div class="text-center">
    <h1 class="display-4">Производитель</h1>
</div>
@if (Model == null)
{
    <div class="text-center" id="error-div">
        <h3 style="color: red">Ошибка отображения информации</h3>
    </div>
}
else
{
    <div class="column-md-18">
        <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
            <div class="text-center" style="font-size: 18px">
                Производитель номер @Model.Id
            </div>
            <div class="text-center">
                Название: @Model.Name
            </div>
        </div>
        <br>
        <br>
        <form method="get" asp-controller="Admin" asp-action="ProducerEdit" asp-route-id=@Model.Id>
            <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
                Изменить производителя
            </button>
        </form>
        <br>
        <form method="post" asp-controller="Admin" asp-action="ProducerDelete" asp-route-id=@Model.Id>
            <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
                Удалить производителя
            </button>
        </form>
        <br>
    </div>
}