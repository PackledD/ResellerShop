@using BuisnessLogic.models
@model Product
@{
    ViewData["Title"] = "Товар";
}

<div class="text-center">
    <h1 class="display-4">Товар</h1>
</div>
@if (Model == null)
{
    <div class="text-center" id="error-div">
        <h3 style="color: red">Ошибка отображения информации</h3>
    </div>
}
else
{
    <div class="column-md-18">
        <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
            <div class="text-center" style="font-size: 18px">
                Товар номер @Model.Id
            </div>
            <div class="text-center">
                Название: @Model.Name
            </div>
            <div class="text-center">
                Категория: @Model.Category.Name
            </div>
            <div class="text-center">
                Фирма-поставщик: @Model.Distributor.Name
            </div>
            <div class="text-center">
                Цена: @Model.Cost
            </div>
            <div class="text-center">
                Производитель: @Model.Producer.Name
            </div>
        </div>
        <br>
        <br>
        <form method="get" asp-controller="Admin" asp-action="ProductEdit" asp-route-id=@Model.Id>
            <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
                Изменить товар
            </button>
        </form>
        <br>
        <form method="post" asp-controller="Admin" asp-action="ProductDelete" asp-route-id=@Model.Id>
            <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
                Удалить товар
            </button>
        </form>
        <br>
    </div>
}