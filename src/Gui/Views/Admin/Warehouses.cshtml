@using BuisnessLogic.models
@{
    ViewData["Title"] = "Склады";
}

<div class="text-center">
    <h1 class="display-4">Все склады</h1>
</div>
@if (ViewBag.Warehouses == null)
{
    <div class="text-center" id="error-div">
        <h3 style="color: red">Ошибка отображения информации</h3>
    </div>
}
else
{
    <div class="column-md-18">
        <br>
        @if (ViewBag.Warehouses.Count == 0)
        {
            <div class="text-center" id="error-div">
                <h4>Складов нет</h4>
            </div>
        }
        <br>
        <form method="get" asp-controller="Admin" asp-action="WarehouseCreate">
            <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
                Добавить склад
            </button>
        </form>
        <br>
        @foreach (var elem in (ViewBag.Warehouses as List<Warehouse>))
        {
            <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
                <div class="text-center" style="font-size: 18px">
                    <a asp-controller="Admin" asp-action="Warehouse" asp-route-id=@elem.Id>Склад номер @elem.Id</a>
                </div>
                <div class="text-center">
                    Адрес: @elem.Address
                </div>
            </div>
            <br>
            <br>
        }
    </div>
}