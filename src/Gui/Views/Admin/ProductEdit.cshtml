@using BuisnessLogic.models
@model Product
@{
    ViewData["Title"] = "Товар - редактирование";
}

<div class="text-center">
    <h1 class="display-4">Товар</h1>
</div>
@if (Model == null)
{
    <div class="text-center" id="error-div">
        <h3 style="color: red">Ошибка отображения информации</h3>
    </div>
}
else
{
    <div class="column-md-18">
        <form method="post" asp-controller="Admin" asp-action="ProductEdit" asp-route-id=@Model.Id>
        <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
            <div class="text-center" style="font-size: 18px">
                Товар номер @Model.Id
            </div>
            <div class="text-center">
                Название:
                <input class="form-control" type="text" name="name" value="@Model.Name" required />
            </div>
            <div class="text-center">
                Категория:
                <select name="category" class="form-control" asp-items=@ViewBag.Categories required>
                </select>
            </div>
            <div class="text-center">
                Фирма-поставщик:
                <select name="distributor" class="form-control" asp-items=@ViewBag.Firms required>
                </select>
            </div>
            <div class="text-center">
                Цена:
                <input class="form-control" type="text" name="cost" value="@Model.Cost" required />
            </div>
            <div class="text-center">
                Производитель:
                <select name="producer" class="form-control" asp-items=@ViewBag.Producers required>
                </select>
            </div>
        </div>
        <br>
        <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
            Изменить
        </button>
        </form>
    </div>
}