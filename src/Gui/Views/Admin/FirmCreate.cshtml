@{
    ViewData["Title"] = "Фирма - создание";
}

<div class="text-center">
    <h1 class="display-4">Фирма</h1>
</div>

<div class="column-md-18">
    <form method="post" asp-controller="Admin" asp-action="FirmCreate">
    <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
        <div class="text-center">
            Название:
            <input class="form-control" type="text" name="name" required />
        </div>
        <div class="text-center">
            Email:
            <input class="form-control" type="email" name="email" required />
        </div>
        <div class="text-center">
            Телефон:
            <input class="form-control" type="text" name="phone" required />
        </div>
        <div class="text-center">
            Физ. адрес:
            <input class="form-control" type="text" name="physAddr" required />
        </div>
        <div class="text-center">
            Юр. адрес:
            <input class="form-control" type="text" name="lawAddr" required />
        </div>
    </div>
    <br>
    <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
        Добавить
    </button>
    </form>
</div>
