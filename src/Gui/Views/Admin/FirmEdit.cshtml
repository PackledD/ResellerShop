@using BuisnessLogic.models
@model Firm
@{
    ViewData["Title"] = "Фирма - редактирование";
}

<div class="text-center">
    <h1 class="display-4">Фирма</h1>
</div>
@if (Model == null)
{
    <div class="text-center" id="error-div">
        <h3 style="color: red">Ошибка отображения информации</h3>
    </div>
}
else
{
    <div class="column-md-18">
        <form method="post" asp-controller="Admin" asp-action="FirmEdit" asp-route-id=@Model.Id>
        <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
            <div class="text-center" style="font-size: 18px">
                Фирма номер @Model.Id
            </div>
            <div class="text-center">
                Название:
                <input class="form-control" type="text" name="name" value="@Model.Name" required />
            </div>
            <div class="text-center">
                Email:
                <input class="form-control" type="email" name="email" value="@Model.Email" required />
            </div>
            <div class="text-center">
                Телефон:
                <input class="form-control" type="text" name="phone" value="@Model.Phone" required />
            </div>
            <div class="text-center">
                Физ. адрес:
                <input class="form-control" type="text" name="physAddr" value="@Model.PhysAddr" required />
            </div>
            <div class="text-center">
                Юр. адрес:
                <input class="form-control" type="text" name="lawAddr" value="@Model.LawAddr" required />
            </div>
        </div>
        <br>
        <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
            Изменить
        </button>
        </form>
    </div>
}