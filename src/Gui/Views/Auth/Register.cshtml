@using BuisnessLogic.models
@{
    ViewData["Title"] = "Регистрация";
}

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Auth" asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="email" name="email" required/>
            </div>
            <div class="form-group">
                <label>ФИО</label>
                <input class="form-control" type="text" name="fullname" required/>
            </div>
            <div class="form-group">
                <label>Фирма</label>
                <select name="firm" id="firm" class="form-control" asp-items=@ViewBag.Firms>
                </select>
            </div>
            <div class="form-group">
                <label>Телефон</label>
                <input class="form-control" type="text" name="phone" required />
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <input class="form-control" type="password" name="password" required/>
            </div>
            </br>
            <button type="submit" class="btn-primary" >
            Зарегистрироваться
            </button>
            @if (ViewData.ContainsKey("Error"))
            {
                <div class="form-group" id="error-div">
                    <label style="color: red">Ошибка регистрации!</label>
                </div>
            }
        </form>
    </div>
</div> 