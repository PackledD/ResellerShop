@{
    ViewData["Title"] = "Товар";
}

<div class="text-center">
    <h1 class="display-4">Товар</h1>
</div>

<div class="column-md-18">
    <br>
    <div class="column-md-16" style="border-style: solid; border-width: 2px; align-content: center; width: 50%; margin: 0 auto">
        <form method="post" asp-controller="Firm" asp-action="ProductCreate">
            <div class="text-center">
                Название:
                <input class="form-control" type="text" name="name" required />
            </div>
            <div class="text-center">
                Категория:
                <select name="categ" class="form-control" asp-items=@ViewBag.Categories required>
                </select>
            </div>
            <div class="text-center">
                Цена:
                <input class="form-control" type="number" name="cost" required />
            </div>
            <div class="text-center">
                Производитель:
                <select name="producer" class="form-control" asp-items=@ViewBag.Producers required>
                </select>
            </div>
            <br />
            <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
                Создать
            </button>
        </form>
        <br />
    </div>
</div>
