@model BuisnessLogic.models.Product
@{
    ViewData["Title"] = "Товар";
}

<div class="text-center">
    <h1 class="display-4">Товар</h1>
</div>
@if (Model == null || Model.Category == null)
{
    <div class="text-center" id="error-div">
        <h3 style="color: red">Ошибка отображения информации</h3>
    </div>
}
else
{
    <div class="column-md-18">
        <form method="post" asp-controller="Firm" asp-action="ProductEdit" asp-route-id=@Model.Id>
        <br>
        <div class="text-center">
            Название:
            <input class="form-control" type="text" name="name" value="@Model.Name" required />
        </div>
        <div class="text-center">
            Категория:
            <select name="categ" class="form-control" asp-items=@ViewBag.Categories>
            </select>
        </div>
        <div class="text-center">
            Цена:
            <input class="form-control" type="number" name="cost" value="@Model.Cost" required />
        </div>
        <div class="text-center">
            Производитель:
            <select name="producer" class="form-control" asp-items=@ViewBag.Producers required>
            </select>
        </div>
        <br />
        <button type="submit" style="width: 20%; margin-left: 40%" class="btn-primary">
            Изменить
        </button>
        <br />
        </form>
    </div>
}